{
  "manifest_version": 2,
  "name": "Poker Now Live Hand Importer",
  "version": "0.1.0",
  "permissions": [
    "storage", "downloads","downloads.shelf"
  ],
  "background": { 
    "scripts": ["hot-reload.js","output/background.js"] 
  },
  "icons": {
    "128": "icon.png" 
  },
  "content_scripts": [
    {
        "matches": [
            "https://*.pokernow.club/games/*"
        ],
      "js": ["output/content.js"],
      "run_at": "document_start"
    }
  ],
  "options_ui": {
    "page": "options.html"
  }  
}